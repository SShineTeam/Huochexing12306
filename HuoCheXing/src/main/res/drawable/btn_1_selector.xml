<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 获得焦点但未按下时的背景图片 -->  
    <item android:state_focused="true" android:state_enabled="true" android:state_pressed="false" android:drawable="@drawable/btn1_up" />  
     <!-- 按下时的背景图片 -->  
    <item android:state_enabled="true" android:state_pressed="true" android:drawable="@drawable/btn1_down" />  
    <!-- 按下时的背景图片 -->  
    <item android:state_enabled="true" android:state_checked="true" android:drawable="@drawable/btn1_down" />
    <!-- 禁用 -->
    <item android:state_enabled="false" android:drawable="@drawable/btn1_disable" />
    <!-- 默认时的背景图片 -->  
    <item android:drawable="@drawable/btn1_up" />  

</selector>
